<!--render 'books/comment', book: @???, book_comment: @???-->
	
	<table class='table'>

    <% book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg") %><br />
          <%= book_comment.user.name %>
        </td>
        <td><%= book_comment.comment %></td>


        <% if book_comment.user == current_user %>
        <td>
            <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger destroy_book_comment_#{book_comment.id}" %>
        </td>
        <% end %>
      </tr>
    <% end %>
</table>

<div>
  <%= form_with(model:[book, book_comment], local:true) do |f| %>
   <%= f.text_area :comment, size:"90x5" %><br>
   <%= f.submit "送信する" %>
  <% end %>
</div>